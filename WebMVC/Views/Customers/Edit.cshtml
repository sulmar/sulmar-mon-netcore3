@model Domain.Customer

<h1>Edit @Model.FirstName @Model.LastName</h1>

<form method="post">
    <input type="hidden" asp-for="Pesel" />

    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" />
    </div>

    <div class="form-row">

        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-4">
            <label asp-for="Salary">Salary</label>
            <input asp-for="Salary" />
        </div>

        <div class="form-group col-6">
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Domain.Gender>()">
            </select>
        </div>

        <div class="form-group col-2">
            <label asp-for="IsRemoved">Removed</label>
            <input  asp-for="IsRemoved" />
        </div>

    </div>

    <div>
        <button class="btn btn-success btn-block" type="submit">Save</button>
    </div>
</form>